<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:backgroundTint="@color/lightoutline"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/giveandgottext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/giveorgotamount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/cutomsearch"
        android:ems="10"
        android:hint="Enter Amount"
        android:inputType="numberDecimal"
        android:padding="10dp" />

    <EditText
        android:id="@+id/giveorgotdesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/cutomsearch"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <Button
        android:id="@+id/giveorgotdate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:backgroundTint="#00B8D4" />

    <Button
        android:id="@+id/giveorgotbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Add" />
</LinearLayout>