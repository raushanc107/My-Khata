<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/lightoutline"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/addnewlbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:text="Add New Page"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/textboxforaddnewuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cutomsearch"
        android:ems="10"
        android:hint="Enter Page Name"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <Button
        android:id="@+id/addnewuserbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Add" />
</LinearLayout>